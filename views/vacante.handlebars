<div class="contenido-superior vacante contenedor">
    <div class="caja">
        <p class="etiqueta">Empresa</p>
        <p class="nombre">{{vacante.empresa}}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Ubicacion</p>
        <p class="nombre">{{vacante.ubicacion}}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">contrato</p>
        <p class="nombre contrato">{{vacante.contrato}}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Salario</p>
        <p class="nombre contrato">${{vacante.salario}}</p>
    </div>
</div>

<div class="vacante-contenedor contenedor">
    <main class="contenido">
        <h2>Descripcion del puesto</h2>
        <div class="vacante-descripcion">
            {{{vacante.descripcion}}}
        </div>
        <a href="/vacantes/editar/{{vacante.url}}" class="btn btn-azul editar-btn">Editar Vacante</a>
    </main>
    <aside class="sidebar">
        <h2>Conocimientos Deseados</h2>
        <ul class="skills">
            {{#each vacante.skills}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </aside>
</div>
<div class="contenedor datos-reclutador">
    <div class="enviar-datos">
        <h2>Contactar reclutador</h2>
        <p>llena el siguiente formulario</p>

        <form method="POST" enctype="multipart/form-data" action="/vacantes/{{vacante.url}}" class="default-form">
            <div class="campo">
                <label>nombre</label>
                <input type="text" name="nombre" placeholder="Tu nombre">
            </div>
            <div class="campo">
                <label>Email</label>
                <input type="email" name="email" placeholder="Tu Email">
            </div>
            <div class="campo">
                <label>Hoja de vida (PDF)</label>
                <input type="file" name="cv">
            </div>
            <div class="campo">
                <input type="submit" value="Enviar" class="btn btn-verde">
            </div>
        </form>
    </div>
    <div class="info-reclutador">
        <h2>Informacion del reclutador</h2>
        {{#if vacante.autor.nombre}}
        <p>{{vacante.autor.nombre}}</p>
        {{/if}}
        {{#if vacante.autor.imagen}}
        <img src="/uploads/perfiles/{{vacante.autor.imagen}}">
        {{/if}}
    </div>
</div>